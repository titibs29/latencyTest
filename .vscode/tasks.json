{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file",
			"command": "D:\\users\\tri\\Documents\\msys64\\mingw64\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-Wall",
				"-Wpedantic",
				"-Wextra",
				"-Wshadow",
				"-Wnon-virtual-dtor",
				"-Wold-style-cast",
				"-Wcast-align",
				"-Wunused",
				"-Woverloaded-virtual",
				"-Wconversion",
				"-Wsign-conversion",
				"-Wmisleading-indentation",
				"-Wduplicated-cond",
				"-Wduplicated-branches",
				"-Wlogical-op",
				"-Wnull-dereference",
				"-Wuseless-cast",
				"-Wdouble-promotion",
				"-Wformat=2",
				"-Wno-unused-result",
				"-Wno-unused-parameter",
				"-Wno-unused-variable",
				"-Wno-unused-function",
				"-Wno-unused-but-set-variable",
				"-Wno-unused-but-set-parameter",
				"-Wno-missing-field-initializers",
				"-Wno-unknown-pragmas",
				"-Wno-unknown-warning-option",
				"-Wno-unknown-warning",
				"-Wno-attributes",
				"-Wno-ignored-attributes",
				"-Wno-ignored-qualifiers",
				// "-Werror",
				"-std=c++11",
				"-O2",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",

			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: D:\\users\\tri\\Documents\\msys64\\mingw64\\bin\\g++.exe"
		}
	]
}